---
import { ViewTransitions } from 'astro:transitions';

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>
<ViewTransitions />
