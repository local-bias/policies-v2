---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'body'>;

const props = Astro.props;
---

<body {...props}>
  <slot />
</body>
<style>
  body {
    display: grid;
    grid-template:
      'main' minmax(100vh, 1fr)
      'footer' auto/
      1fr;
  }
  @media (min-width: 1024px) {
    body {
      grid-template:
        'nav main' minmax(100vh, 1fr)
        'footer footer' auto/
        250px 1fr;
    }
  }
  @media (min-width: 1280px) {
    body {
      grid-template:
        'nav main sidebar' minmax(100vh, 1fr)
        'footer footer footer' auto/
        250px 1fr 250px;
    }
  }
</style>
