---
type Props = {
  title: string;
  items: {
    title: string;
    href: string;
  }[];
};

const { title, items } = Astro.props;
---

<div>
  <div class="title">{title}</div>
  <nav>
    {
      items.map(({ href, title }) => (
        <div>
          <a href={href}>{title}</a>
        </div>
      ))
    }
  </nav>
</div>
<style>
  .title {
    margin-bottom: 1rem /* 16px */;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #1f2937;
  }
  nav {
    display: flex;
    flex-direction: column;
    gap: 1rem /* 16px */;
  }
  a {
    color: #6b7280;
  }
</style>
